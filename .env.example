# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
TAVILY_API_KEY=your_tavily_api_key_here

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
DATABASE_NAME=knowledge_base
COLLECTION_NAME=documents
EMBEDDING_FIELD_NAME=embedding
EMBEDDING_MODEL_NAME=thenlper/gte-small

# Server Configuration
API_HOST=127.0.0.1
API_PORT=8000
GRADIO_HOST=127.0.0.1
GRADIO_PORT=7860

# PDF Processing Configuration
CHUNK_SIZE=3500
CHUNK_OVERLAP=150

# RAG Configuration
SIMILARITY_SEARCH_LIMIT=5
CHAT_HISTORY_LIMIT=5

# ====== NEW ENHANCED FEATURES ======

# Query Classification Settings
ENABLE_QUERY_CLASSIFICATION=true
CASUAL_TEMPERATURE=0.7      # Higher for more creative casual responses
HISTORY_TEMPERATURE=0.3     # Lower for factual recall from history
RETRIEVAL_TEMPERATURE=0.2   # Lowest for accurate retrieval-based answers

# Enhanced Chat History Settings
CHECK_HISTORY_FOR_ANSWERS=true     # Check if answer exists in chat history
HISTORY_CONTEXT_FORMAT=structured   # "structured" or "simple"

# Debug Settings (set to false in production)
DEBUG_PIPELINE_DECISIONS=true      # Log pipeline decision process
LOG_QUERY_CLASSIFICATION=true      # Log query classification results